        const getSuggestionBtn = document.getElementById('getSuggestionBtn');
        const aiSuggestionOutput = document.getElementById('aiSuggestionOutput');
        const suggestionContent = document.getElementById('suggestionContent');
        const loadingSpinner = document.getElementById('loadingSpinner');

        getSuggestionBtn.addEventListener('click', async () => {
            const currentGrade = document.getElementById('currentGrade').value;
            const targetExam = document.getElementById('targetExam').value;
            
            const selectedNeedsCheckboxes = document.querySelectorAll('input[name="specificNeeds"]:checked');
            const specificNeeds = Array.from(selectedNeedsCheckboxes).map(checkbox => checkbox.value).join(', ');

            const prompt = `T√¥i l√† h·ªçc sinh ${currentGrade}. M·ª•c ti√™u c·ªßa t√¥i l√† ${targetExam}. T√¥i c·∫ßn c·∫£i thi·ªán "${specificNeeds}". D·ª±a tr√™n c√°c th√¥ng tin n√†y, h√£y g·ª£i √Ω m·ªôt l·ªô tr√¨nh h·ªçc ti·∫øng Anh ph√π h·ª£p, bao g·ªìm c√°c k·ªπ nƒÉng c·∫ßn t·∫≠p trung v√† g·ª£i √Ω v·ªÅ vi·ªác tham gia c√°c l·ªõp h·ªçc c·ªßa c√¥ H·∫±ng (L·ªõp 10: ng·ªØ ph√°p+nghe n√≥i ƒë·ªçc vi·∫øt, L·ªõp 11: luy·ªán IELTS; L·ªõp 11 l√™n 12: K√¨ 1 ng·ªØ ph√°p+t·ª´ v·ª±ng, K√¨ 2 √¥n t·∫≠p+ƒë·ªÅ thi t·ªët nghi·ªáp THPT). ƒê∆∞a ra c√¢u tr·∫£ l·ªùi ng·∫Øn g·ªçn v√† t·∫≠p trung v√†o c√°c ƒëi·ªÉm ch√≠nh.`;

            loadingSpinner.classList.remove('hidden');
            getSuggestionBtn.disabled = true;
            aiSuggestionOutput.classList.add('hidden');
            suggestionContent.innerHTML = '';

            try {
                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                const payload = { contents: chatHistory };
                const apiKey = "";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    suggestionContent.innerHTML = text.replace(/\n/g, '<br>');
                    aiSuggestionOutput.classList.remove('hidden');
                } else {
                    suggestionContent.innerHTML = 'Kh√¥ng th·ªÉ t·∫°o g·ª£i √Ω. Vui l√≤ng th·ª≠ l·∫°i sau.';
                    aiSuggestionOutput.classList.remove('hidden');
                }
            } catch (error) {
                console.error('L·ªói khi g·ªçi API Gemini:', error);
                suggestionContent.innerHTML = 'ƒê√£ x·∫£y ra l·ªói khi t·∫°o g·ª£i √Ω. Vui l√≤ng ki·ªÉm tra k·∫øt n·ªëi m·∫°ng v√† th·ª≠ l·∫°i.';
                aiSuggestionOutput.classList.remove('hidden');
            } finally {
                loadingSpinner.classList.add('hidden');
                getSuggestionBtn.disabled = false;
            }
        });
    </script>

</body>
</html>
