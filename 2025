                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                         labels: {
                            color: brilliantBlues.text,
                            font: {
                                family: "'Be Vietnam Pro', sans-serif"
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                cutout: '60%'
            }
        });

        const radarCtx = document.getElementById('competitiveRadarChart').getContext('2d');
        const rawRadarLabels = ['Kinh nghi·ªám Th·ª±c chi·∫øn', 'Th√†nh t√≠ch ƒë√£ Ch·ª©ng minh', 'Chuy√™n m√¥n Gi√°o vi√™n (IELTS)', 'L·ªô tr√¨nh C√° nh√¢n h√≥a', 'Sƒ© s·ªë L·ªõp h·ªçc Nh·ªè'];
        const processedRadarLabels = rawRadarLabels.map(label => wrapLabel(label, 16));

        new Chart(radarCtx, {
            type: 'radar',
